<h1 class="head">Editing Book</h1>

<div class="error">
    <% if @book.errors.any? %>
     <div class="error-box">
      <p class="error-title">
        <b><%= pluralize(@book.errors.count,"error")%> prohibited this book from being saved:</b>
      </p>
      <ul class="error-message">
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
     </div>
    <% end %>
    </div>

<%= form_with model:@book do |f| %>

<p>Title</p>
<div class="form">
<%= f.text_field :title %>
</div>
<p>Body</p>
<div class="form">
<b><%= f.text_area :body %></b>
</div>
<%= f.submit ' Update Book ' %>
<% end %>
<div class="btn">
<%= link_to "show","/books/#{@book.id}" %> | <%= link_to "Back","/books" %>
</div>
